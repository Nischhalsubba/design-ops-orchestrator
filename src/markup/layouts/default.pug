doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        //- CSS will be injected here automatically by gulp-inject
        //- inject:css
        //- endinject
        meta(name="description", content=description)
    body
        header.site-header
            block header
                h1= title
                p.tagline= description
        
        main.site-content
            block content
        
        footer.site-footer
            p &copy; 2025 #{author}. Built with DesignOps Orchestrator.
        
        //- JS will be injected here automatically by gulp-inject
        //- inject:js
        //- endinject