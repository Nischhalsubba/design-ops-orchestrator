extends ../layouts/default.pug

block content
    //- Hero Section
    section.hero
        .container
            span.badge DesignOps God-Tier
            h1 Living Style Guide
            p.lead 
                | This page is automatically generated from 
                code src/tokens/tokens.json
                | . Upload a new JSON file and watch your site update instantly.
            .hero-actions
                button.btn.btn-primary View Components
                button.btn.btn-secondary Documentation

    //- 1. Color Palette (Synced with Variables)
    section.style-section
        .container
            h2.section-title Color Tokens
            p.section-desc Mapped from Figma Tokens JSON
            
            .color-grid
                //- Note: In a real app, you would pass the JSON data to Pug to iterate
                //- For demo purposes, we hardcode visualization of the token effect
                .color-card
                    .color-swatch(style=`background-color: #6366f1`)
                    .color-info
                        strong Primary
                        code $global-colors-primary
                        span.hex #6366f1
                .color-card
                    .color-swatch(style=`background-color: #8b5cf6`)
                    .color-info
                        strong Secondary
                        code $global-colors-secondary
                        span.hex #8b5cf6
                .color-card
                    .color-swatch(style=`background-color: #22c55e`)
                    .color-info
                        strong Success
                        code $global-colors-success
                        span.hex #22c55e

    //- 2. Typography
    section.style-section
        .container
            h2.section-title Typography
            p.section-desc Mapped from <code>_typography.scss</code>
            
            .type-scale
                each type in designSystem.typography
                    .type-row
                        .type-meta
                            strong= type.name
                            code= type.tag
                        .type-sample
                            #{type.tag}= type.sample

    //- 3. Components
    section.style-section
        .container
            h2.section-title Interface Components
            p.section-desc Buttons, Inputs, and Cards.

            .component-row
                h3 Buttons
                .demo-group
                    button.btn.btn-primary Primary Button
                    button.btn.btn-secondary Secondary Button
                    button.btn.btn-primary(disabled) Disabled

    //- 4. Iconography (SVG Sprite)
    section.style-section
        .container
            h2.section-title Icon System
            p.section-desc Auto-generated sprite from <code>src/assets/icons/*.svg</code>
            
            .icon-grid
                //- Placeholder icons for demo
                .icon-card
                    svg.icon
                        use(xlink:href="assets/sprites/sprite.svg#icon-user")
                    span user.svg
                .icon-card
                    svg.icon
                        use(xlink:href="assets/sprites/sprite.svg#icon-search")
                    span search.svg
                .icon-card
                    svg.icon
                        use(xlink:href="assets/sprites/sprite.svg#icon-settings")
                    span settings.svg